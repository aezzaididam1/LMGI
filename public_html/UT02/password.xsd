<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
   
    <xs:element name="password">
        <xs:simpleType>
          <xs:restriction base="xs:string">
              <!-- no contempla la ñ/Ñ -->
            <xs:pattern value="[a-zA-Z0-9]{8}"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>

</xs:schema>